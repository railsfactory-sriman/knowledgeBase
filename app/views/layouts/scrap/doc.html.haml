!!! 5
%html{"xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    = render "shared/layout/head"

  %body{:class => bodys_class(params) << "doc-layout"  }
    #feedback-btn
      %p=link_to "Feedback", "/feedback"
    = render_app_config
    = render :partial => "shared/topbar"
    #container{:class => @current_class}
      #columns
        #main-content-wrap
          = current_group.head
          .top-page
            -if current_group.has_logo?
              =link_to image_tag(logo_path(current_group), :class => "group_logo"), domain_url(:custom => current_group.domain)
            -else
              = image_tag("default_logo.png", :class => "group_logo")
          = yield
              

      = render "shared/layout/footer"
      #login_dialog.top-bar{'data-title' => t('devise.sessions.link')}
        %ul.auth-list
          %li
            = render "shared/login_drop_down"
            
          