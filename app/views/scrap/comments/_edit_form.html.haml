
= form_for full_scope+[@comment], :html => {:class => "edit_comment_form commentForm nestedAnswerForm addNestedAnswer"} do |f|
  %fieldset
    = render :partial => "comments/form", :locals => local_assigns.merge(:f => f, :markdown => true)
    .buttons
      = submit_tag t("scaffold.update")
      = t("global.or")
      = link_to t('scaffold.cancel'), '', :class => 'cancel cancel_comment'


